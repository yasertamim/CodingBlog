@model IEnumerable<Post>



<!--This view displays all posts related to logged in user-->
<h4>My posts</h4>



<div class="row">
    @foreach (var post in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="/media/code.png" class="card-img-top" alt="...">

            <div>
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <h6 class="card-title">@post.Language</h6>
                    <p class="card-text">@post.Content.Substring(0,50)</p>

                    <div class="button-box col-lg-12">
                        <a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-secondary">Show</a>
                       
                        <a asp-area="" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-secondary">Delete</a>
                        <a asp-area="" asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-secondary">Edit</a>
                    </div>
                    

                </div>


            </div>
        </div>
        <br />
    }

</div>